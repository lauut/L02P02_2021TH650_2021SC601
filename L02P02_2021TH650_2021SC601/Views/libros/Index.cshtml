@{
}
<form asp-action="Crearlibro">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Nombre del Libro:</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        
    </div>
    <div class="sm-4">
        <label for="exampleInputPassword1" class="form-label">Descripcion:</label>
        <input type="password" class="form-control" id="exampleInputPassword1">
    </div>
   <br/>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("lbautor", "Precio:", new { @class = "control-label" })
        </div>
        <div class="col-sm-2">
            @Html.TextBox("Precio", "", new { @class = "form-control" })
        </div>
        <div class="col-sm-2">
            @Html.Label("lbautor", "Autor:", new { @class = "control-label" })
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("id", ViewData["listautores"] as SelectList, "Seleccione un autor", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("lblcatg", "Categoría o género:", new { @class = "control-label" })
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("id", ViewData["listcatg"] as SelectList, "Seleccione una categoría", new { @class = "form-control" })
        </div>
    </div>

    <br/>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripccion</th>
            <th>Precio</th>
            <th>Autor</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var libro in (IEnumerable<dynamic>)ViewData["listlibros"])
        {
            <tr>
                <td>@libro.nombrelibro</td>
                <td>@libro.descripcion</td>
                <td>@libro.precio</td>
                <td>@libro.autor</td>
                <td>@libro.categoria</td>
            </tr>
        }
    </tbody>
</table>
